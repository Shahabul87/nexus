# NEXUS Platform - Environment Variables
# Copy this file to .env and fill in your values

# HuggingFace token (REQUIRED for gated models: MedGemma, MedSigLIP)
# Get your token at https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# MedGemma control (default: true)
# Set to "false" to use rule-based synthesis instead of MedGemma
NEXUS_USE_MEDGEMMA=true

# CORS origins for API (default: * allows all)
# For production, set to specific origins: http://localhost:3000,https://yourapp.com
CORS_ORIGINS=*

# Integration tests (default: false)
# Set to "true" to run real model integration tests
NEXUS_USE_REAL_MODELS=false
